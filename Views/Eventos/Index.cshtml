@model List<EnEscenaMadrid.Models.Evento>
@{
    ViewData["Title"] = "En Escena Madrid - Eventos Culturales";
}

<!-- HEADER PRINCIPAL -->
<header class="app-header">
    <h1 class="app-title">🎭 EN ESCENA MADRID</h1>
    <p class="app-tagline">Todo el teatro en un click</p>
</header>

<div class="container">
    <!-- NAVEGACIÓN PRINCIPAL -->
    <nav class="main-nav">
        <div class="nav-tabs">
            <a href="/Eventos" class="nav-tab active">🎭 TEATRO</a>
            <a href="/Eventos/Categoria/cine" class="nav-tab">🎬 CINE</a>
            <a href="/Eventos/Categoria/exposiciones" class="nav-tab">🎨 EXPOSICIONES</a>
            <a href="/Eventos/Categoria/literatura" class="nav-tab">📚 LITERATURA</a>
            <a href="/Eventos/Categoria/musica" class="nav-tab">🎵 MÚSICA</a>
            <a href="/Eventos/Categoria/festivales" class="nav-tab">🎉 FESTIVALES</a>
            <a href="/Eventos/Categoria/infantil" class="nav-tab">👶 INFANTIL</a>
        </div>
    </nav>

    <!-- INFORMACIÓN DEBUG -->
    <div style="background: #d4edda; color: #155724; padding: 15px; border-radius: 6px; margin: 20px 0;">
        <h3>📊 Estadísticas</h3>
        <p><strong>Total eventos encontrados:</strong> @Model.Count</p>
        <p><strong>Categoría actual:</strong> @(ViewBag.CategoriaActual ?? "Todas")</p>
    </div>

    <!-- LISTA DE EVENTOS -->
    <main class="theaters-grid">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var evento in Model.Take(10))
            {
                <article class="theater-card">
                    <h2 class="theater-title">@evento.Titulo</h2>
                    
                    <div class="theater-info">
                        <span class="theater-info-label">📅 Fecha:</span>
                        @evento.FechaEvento.ToString("dd/MM/yyyy") a las @evento.HoraEvento
                    </div>
                    
                    <div class="theater-info">
                        <span class="theater-info-label">📍 Lugar:</span>
                        @evento.NombreInstalacion
                    </div>
                    
                    <div class="theater-info">
                        <span class="theater-info-label">🏛️ Dirección:</span>
                        @evento.DireccionCompleta
                        @if (evento.Latitud.HasValue && evento.Longitud.HasValue)
                        {
                            <text> </text>
                            <a href="https://www.google.com/maps?q=@evento.Latitud,@evento.Longitud" 
                               target="_blank" class="theater-link">
                                (mapa)
                            </a>
                        }
                    </div>
                    
                    <div class="theater-info">
                        <span class="theater-info-label">💰 Precio:</span>
                        @(evento.EsGratuito ? "Gratuito" : "Consultar precio")
                    </div>
                    
                    <div class="theater-info">
                        <span class="theater-info-label">🎭 Tipo:</span>
                        @evento.Tipo
                    </div>

                    @if (!string.IsNullOrEmpty(evento.ContentUrl))
                    {
                        <div class="theater-info mt-md">
                            <a href="@evento.ContentUrl" target="_blank" class="theater-link">
                                🌐 Más información
                            </a>
                        </div>
                    }
                </article>
            }
        }
        else
        {
            <div class="theater-card text-center">
                <h2 class="theater-title">❌ No hay eventos disponibles</h2>
                <p>No se pudieron cargar los eventos.</p>
                @if (ViewBag.Error != null)
                {
                    <p style="color: var(--teatro-rojo); margin-top: 1rem;">
                        <strong>Error:</strong> @ViewBag.Error
                    </p>
                }
            </div>
        }
    </main>
</div>